<style type="text/css">
  .left-mar{
    margin-bottom: 7px !important;
    margin-left: 15px;
  }

  #phone_sold_date_1i{
    margin-left: 15px;
    margin-bottom: 5px;
  }

  #slod_by_id {
   margin-bottom: 7px !important;
    margin-left: 15px; 
  }
</style>


<div class="row">
  <h3 style="margin-left:52px;">Add New Product</h3>
  <div class="col-lg-6 col-lg-offset-3">
    <%= form_for @phone, html: { class: ' form-horizontal', role: 'form'}  do |f| %>
      <fieldset>
         
        <div class="form-group">
          <%= f.label :brand, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :brand, class: "left-mar form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :color, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :color, class: "left-mar form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :emei, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :emei, class: " left-mar form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Purchase price", class: "col-sm-3 control-label" %>
          <div class="col-sm-9 ">
            <%= f.text_field :price, class: "left-mar form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Sold price", class: "col-sm-3 control-label" %>
          <div class="col-sm-9 ">
            <%= f.text_field :sold_price, class: "left-mar form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :condition, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <select id="slod_by_id" name="phone[condition]">
              <option>8/10</option>
              <option>9/10</option>
              <option>10/10</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "General comments", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_area :comment, class: "left-mar",cols: "30", rows: "5", :placeholder=> "write comment here..." %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :storage, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
             <select id="slod_by_id" name="phone[storage]">
              <option>None</option>
              <option>16GB</option>
              <option>32GB</option>
              <option>64GB</option>
            </select>
          </div>
        </div>
      <div class="col-sm-offset-3">
        <%= f.submit 'Save', class: "btn btn-primary pull-right" %>
      </div>
    <% end %>
  </div>
</div>