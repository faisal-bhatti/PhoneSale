<h3>In Stock</h3>
<table class="table table-striped">
	<thead>
		<th>Brand</th>
		<th>Storage</th>
		<th>Color</th>
		<th>IMEI</th>
		<th>Price</th>
		<th>Status</th>
		<th>Actions</th>
	</thead>
	<tbody>
		<% @phones && @phones.each do |phone| %>
			<tr>
				<td><%= link_to "#{phone.brand}", phone_path(phone)%></td>
				<td><%= phone.storage%></td>
				<td><%= phone.color%></td>
				<td><%= phone.emei%></td>
				<td><%= phone.price%></td>
				<td><%= phone.status%></td>
				<td>
					<% if phone.status == "sold" %>
						<%= link_to "Return", return_phone_path(phone), class: "btn btn-sm btn-warning"%>	
					<% else %>
						<%= link_to "sold", sold_phone_path(phone), class: "btn btn-sm btn-success"%>
					<% end %>
					<%= link_to "Edit", edit_phone_path(phone), class: "btn btn-sm btn-primary"%>
					<% if current_user && current_user.user_type == "admin" %>
						<%= link_to 'Delete', phone, data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-sm btn-danger" %>
					<% end %>
				</td>

			</tr>
		<% end %>			
	</tbody>
</table>
